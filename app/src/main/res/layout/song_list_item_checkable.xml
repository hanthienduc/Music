<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?android:attr/selectableItemBackground">

    <CheckBox
            android:id="@+id/song_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:colorControlNormal="@color/colorAccent"
            android:colorControlActivated="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/song_checkbox"
            android:orientation="vertical">
        <TextView
                android:id="@+id/song_item_name"
                style="@style/TitleText"/>

        <TextView
                android:id="@+id/song_item_desc"
                style="@style/DescText"/>
    </LinearLayout>
</RelativeLayout>