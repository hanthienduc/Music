<android.support.v7.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <com.kabouzeid.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory
            android:title="@string/appearance">
        <com.kabouzeid.appthemehelper.common.prefs.supportv7.ATESwitchPreference
                android:key="lock_screen_art"
                android:title="@string/lock_screen_art"
                android:summary="@string/lock_screen_art_summary"
                android:defaultValue="true"
                android:persistent="true"/>

        <com.kabouzeid.appthemehelper.common.prefs.supportv7.ATESwitchPreference
                android:key="dark_theme"
                android:title="@string/dark_mode"
                android:persistent="true"
                android:defaultValue="false"/>

        <com.kabouzeid.appthemehelper.common.prefs.supportv7.ATESwitchPreference
                android:key="substratum_theme"
                android:title="Follow substratum theme"
                android:defaultValue="false"
                android:persistent="true"/>

        <com.kabouzeid.appthemehelper.common.prefs.supportv7.ATEColorPreference
                android:key="primary_color"
                android:persistent="false"
                android:title="Primary color"/>

        <com.kabouzeid.appthemehelper.common.prefs.supportv7.ATEColorPreference
                android:key="accent_color"
                android:persistent="false"
                android:title="Accent color"/>
    </com.kabouzeid.appthemehelper.common.prefs.supportv7.ATEPreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
