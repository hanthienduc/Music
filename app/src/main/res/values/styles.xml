<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<resources>

    <style name="AppTheme.Light" parent="MaterialDrawerTheme.Light">
        <item name="md_dark_theme">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/lightWindowBackground</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="search_background_color">@color/lightContentColor</item>
        <item name="search_theme">light</item>
    </style>

    <style name="AppTheme.Dark" parent="MaterialDrawerTheme">
        <item name="md_dark_theme">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/darkWindowBackground</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="search_background_color">@color/darkContentColour</item>
        <item name="search_theme">dark</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="DescText">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="PlayerButton">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">22dp</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@drawable/unbounded_ripple</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>